
{% extends "base.j2" %}
{% block content %}

    <div class="container mt-3 pb-3 rounded-top text-warning">
        <h1>Current Ranks</h1>

        <table class="table table-striped table-bordered">
            <thead class="table-success">
                <tr>
                    <th>Rank ID</th>
                    <th>Rank Name</th>
                </tr>
            </thead>
            <tbody>
                {% for rank in ranks %}
                    <tr>
                        <td>{{ rank['rankID'] }}</td>
                        <td>{{ rank['rankName'] }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="container rounded-bottom pb-3 text-warning">
        <h1>Add New Rank</h1>
        <form action="{{ url_for('add_rank') }}" method="POST">
            <div class="row">
                <div class="col-5">
                    <label for="rankName">Input Rank:</label>
                    <input class="form-control mx-3 mb-3 bg-secondary-subtle " type="text" name="rankName" placeholder="Rank Name" required=True />
                </div>
            </div>
            <button class="btn btn-warning col-2 mx-3" type="submit">Add</button>
        </form>
    </div>


{% endblock %}