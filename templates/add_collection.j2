
{% extends "base.j2" %}
{% block content %}

    <h1>Payment Collections</h1>

    <table>
        <thead>
        <tr>
            <th>Collection ID</th>
            <th>Enforcer ID</th>
            <th>Loan ID</th>
            <th>Business ID</th>
            <th>Amount</th>
            <th>Date</th>
        </tr>
        <tbody>
        {% for collection in collections %}
            <tr>
                <td>{{ collection['collectionID'] }}</td>
                <td>{{ collection['enforcerID'] }}</td>
                <td>{{ collection['loanID'] }}</td>
                <td>{{ collection['businessID'] }}</td>
                <td>{{ collection['amountCollected'] }}</td>
                <td>{{ collection['dateOfCollection'] }}</td>
            </tr>
        {% endfor %}
    </table>


    <h1>Add New Collection</h1>
    <form action="{{ url_for('add_collection') }}" method="POST">
        <label for="select_enforcer">Select Enforcer:</label>
        <select id="select_enforecer" name="select_enforcer">
            {% for enforcer in enforcers %}
                <option value={{ enforcer["firstName"] }}>{{ enforcer["firstName"] }}</option>
            {% endfor %}
        </select>

        <label for="select_loan">Select Loan:</label>
        <select id="select_loan" name="select_loan">
            {% for loan in loans %}
                <option value={{ loan["loanID"] }}>{{ loan["loanID"] }}</option>
            {% endfor %}
        </select>

        <label for="select_location">Collection Location:</label>
        <select id="select_location" name="select_location">
            {% for location in locations %}
                <option value={{ location["businessID"] }}>{{ location["businessID"] }}</option>
            {% endfor %}
        </select>
        <button type="submit">Add</button>
    </form>


{% endblock %}