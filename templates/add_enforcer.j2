
{% extends "base.j2" %}
{% block content %}

    <h1>Current Enforcers</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Enforcer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Start Date</th>
            <th>Rank ID</th>
        </tr>
        <tbody>
        {% for enforcer in enforcers %}
            <tr>
                <td>{{ enforcer['enforcerID'] }}</td>
                <td>{{ enforcer['firstName'] }}</td>
                <td>{{ enforcer['lastName'] }}</td>
                <td>{{ enforcer['startDate'] }}</td>
                <td>{{ enforcer['rankID'] }}</td>
            </tr>
        {% endfor %}
    </table>


    <h1>Add New Enforcer</h1>
    <form action="{{ url_for('add_enforcer') }}" method="POST">
        <input type="text" name="firstName" placeholder="First Name" required=True />
        <input type="text" name="lastName" placeholder="Last Name" />
        <input type="date" name="startDate" required=True /> 
        <input type="number" name="rankID" placeholder="Rank ID" required=True />
        <button type="submit">Add</button>
    </form>


{% endblock %}