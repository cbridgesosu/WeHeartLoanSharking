
{% extends "base.j2" %}
{% block content %}

    <h1>Loans</h1>

    <table>
        <thead>
        <tr>
            <th>Loan ID</th>
            <th>Client ID</th>
            <th>Origination Amount</th>
            <th>Principal Remaining</th>
            <th>Origination Date</th>
            <th>Interest Rate</th>
            <th>Payment Due Date</th>
        </tr>
        <tbody>
        {% for loan in loans %}
            <tr>
                <td>{{ loan['loanID'] }}</td>
                <td>{{ loan['clientID'] }}</td>
                <td>{{ loan['originationAmount'] }}</td>
                <td>{{ loan['principalRemaining'] }}</td>
                <td>{{ loan['originationDate'] }}</td>
                <td>{{ loan['interestRate'] }}</td>
                <td>{{ loan['paymentDue'] }}</td>
            </tr>
        {% endfor %}
    </table>


    <h1>Add New Loan</h1>
    <form action="{{ url_for('add_loan') }}" method="POST">
        <label for="originationAmount">Loan Amount:</label>
        <input type="number" name="originationAmount" placeholder="Amount" min="0" required=True />
        <label for="interestRate">Interest Rate:</label>
        <input type="number" name="interestRate" placeholder="Interest Rate (%)" min="0" max="100" required=True />
        <label for="paymentDue">Monthly Due Date:</label>
        <input type="number" name="paymentDue" placeholder="Due Date" min="1" max="31" required=True />
        <label for="assign_loan">Select Client:</label>
        <select id="assign_loan" name="assign_loan" required=True >
            {% for client in clients %}
                <option value={{ client["firstName"] }}>{{ client["firstName"] }}</option>
            {% endfor %}
        </select>
        <button type="submit">Add</button>
    </form>


{% endblock %}