                <th>Assignment ID</th>
                <th>Enforcer Name</th>
                <th>Client Name</th>
                <th>Delete</th>
                <th>Update</th>
            </tr>
            </thead>
            <tbody>
            {% for assignment in enforcer_has_clients %}
