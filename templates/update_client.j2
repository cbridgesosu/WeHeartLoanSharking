
{% extends "base.j2" %}
{% block content %}

    <h1>Current Clients</h1>

    <table>
        <thead>
        <tr>
            <th>Client ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>In Good Standing</th>
            <th>Remaining Loans</th>
        </tr>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client['clientID'] }}</td>
                <td>{{ client['firstName'] }}</td>
                <td>{{ client['lastName'] }}</td>
                <td>{{ client['inGoodStanding'] }}</td>
                <td>{{ client['loansRemaining'] }}</td>
            </tr>
        {% endfor %}
    </table>


    <h1>Update Client</h1>
    <form action="{{ url_for('update_client') }}" method="POST">
        <input type="text" name="firstName" placeholder="First Name" required=True />
        <input type="text" name="lastName" placeholder="Last Name" />
        <button type="submit">Update</button>
    </form>


{% endblock %}