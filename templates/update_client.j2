
{% extends "base.j2" %}
{% block content %}

    <div class="container mt-3 pb-3 rounded-top text-warning">
    </div>

    <div class="container rounded-bottom pb-3 text-warning">
        <h1>Update Client</h1>
        <form action="/update_client/{{client[0]["clientID"]}}" method="POST">
            <div class="row">
                <div class="col-5">
                    <input class="form-control mx-3 mb-3 bg-secondary-subtle" type="text" name="firstName" value={{client[0]["firstName"]}} required=True />
                </div>
            </div>
            <div class="row">
                <div class="col-5">
                    <input class="form-control mx-3 mb-3 bg-secondary-subtle" type="text" name="lastName" value={{client[0]["lastName"]}} />
                </div>
            </div>
            <div class="row">
                <div class="col-5">
                    <input class="form-control mx-3 mb-3 bg-secondary-subtle" type="text" name="inGoodStanding" value={{ "True" if client[0]["inGoodStanding"] == 1 else "False" }} />
                </div>
            </div>
            <button class="btn btn-warning col-2 mx-3" type="submit">Update</button>
        </form>
    </div>


{% endblock %}