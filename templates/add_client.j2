
{% extends "base.j2" %}
{% block content %}

    <div class="container mt-3 pb-3 rounded-top text-warning">
        <h1>Current Clients</h1>

        <table class="table table-striped table-bordered">
            <thead class="table-success">
                <tr>
                    <th>Client ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>In Good Standing</th>
                </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client['clientID'] }}</td>
                    <td>{{ client['firstName'] }}</td>
                    <td>{{ client['lastName'] }}</td>
                    <td>{{ client['inGoodStanding'] }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>

    <div class="container rounded-bottom pb-3 text-warning">
        <h1>Add New Client</h1>
        <form action="{{ url_for('add_client') }}" method="POST">
            <div class="row">
                <div class="col-5">
                    <input class="form-control mx-3 mb-3 bg-secondary-subtle" type="text" name="firstName" placeholder="First Name" required=True />
                </div>
            </div>
            <div class="row">
                <div class="col-5">
                <input class="form-control mx-3 mb-3 bg-secondary-subtle" type="text" name="lastName" placeholder="Last Name" />
                </div>
            </div>
            <div class="row">
                <div class="col-5">
                <input class="form-control mx-3 mb-3 bg-secondary-subtle" type="text" name="inGoodStanding" placeholder="True / False" />
                </div>
            </div>
            <button class="btn btn-warning col-2 mx-3" type="submit">Add</button>

        </form>
    </div>

{% endblock %}